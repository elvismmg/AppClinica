<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_registry_paso3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".ui.registry.RegistryPaso3Fragment">

    <TextView
        android:id="@+id/text_registry3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:text="Reserva de Cita"
        android:textSize="20sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paso 3 - 4: Datos"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/ScrollView_ShowMyOrderDetail"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="390dp" >

        <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblPaciente1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paciente" />

            <EditText
                android:id="@+id/txtPaciente1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="textPersonName"
                android:text="Juan José Viszcarra" />

            <TextView
                android:id="@+id/lblEspecialidad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/especialidad" />

            <EditText
                android:id="@+id/txtEspecialidad1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="Medicina General" />

            <TextView
            android:id="@+id/lblMedico1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medico" />

            <EditText
                android:id="@+id/txtMedico1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="Dr. Moises García Nazareno" />

            <TextView
                android:id="@+id/lblSede1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sede" />

            <EditText
                android:id="@+id/txtSede1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="Por Tu Salud - Norte" />

            <TextView
                android:id="@+id/lblConsultorio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/consultorio" />

            <EditText
                android:id="@+id/txtConsultorio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="A421" />

            <TextView
                android:id="@+id/lblFecha1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fecha" />

            <EditText
                android:id="@+id/txtFecha1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="06/08/2020" />

            <TextView
                android:id="@+id/lblHora1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hora" />

            <EditText
                android:id="@+id/txtHora1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="04:00 pm" />

            <TextView
                android:id="@+id/lblTipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_cita" />

            <EditText
                android:id="@+id/txtTipo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="text"
                android:text="TeleConsulta" />

<!--            <Button-->
<!--                android:id="@+id/btnAdjuntar1"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Adjuntar Imágenes" />-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_marginStart="8dp"-->
<!--                android:layout_marginEnd="8dp"-->
<!--                android:layout_marginBottom="8dp"-->
<!--                android:orientation="horizontal">-->
<!--                <ImageView-->
<!--                    android:id="@+id/IdProf"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:background="@drawable/ic_menu_camera"/>-->
<!--            </LinearLayout>-->
            <Button
                android:id="@+id/RegistryPaso3Fragment_btnAttachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adjuntar Imágenes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                android:text="@string/RegistryConfirmation_tvPhotoToolTip">

            </TextView>

            <LinearLayout
                android:id="@+id/clTakePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                tools:ignore="DuplicateIds">

                <ImageView
                    android:id="@+id/RegistryPaso3Fragment_ivPicA"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="1dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/portusalud_256"
                    android:background="@drawable/ic_menu_camera"/>

                <ImageView
                    android:id="@+id/RegistryPaso3Fragment_ivPicB"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="1dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/RegistryPaso3Fragment_ivPicA"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/portusalud_256"
                    android:background="@drawable/ic_menu_camera"/>

                <ImageView
                    android:id="@+id/RegistryPaso3Fragment_ivPicC"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="1dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    app:layout_constraintStart_toEndOf="@id/RegistryPaso3Fragment_ivPicB"
                    tools:ignore="MissingConstraints"
                    android:src="@drawable/portusalud_256"
                    android:background="@drawable/ic_menu_camera"/>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:orientation="horizontal">

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnRegresar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnContinuar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>