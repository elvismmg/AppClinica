<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/centers_row_ivMedicalCenter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/medicalcenter" />

    <TextView
        android:id="@+id/centers_row_tvCenterName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/centers_row_ivMedicalCenter"
        android:layout_marginTop="3dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/centers_row_tvCenterAddress"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/centers_row_tvCenterName"
        android:layout_toEndOf="@id/centers_row_ivMedicalCenter"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/centers_row_ivShowMap"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@id/centers_row_tvCenterName"
        app:srcCompat="@drawable/map" />

</RelativeLayout>