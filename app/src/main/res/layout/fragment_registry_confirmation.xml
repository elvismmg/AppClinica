<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registry.RegistryConfirmationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/RegistryConfirmation_ivConfirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/citaconfirmacion" />

        <TextView
            android:id="@+id/RegistryConfirmation_tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="25dp"
            android:text="@string/RegistryConfirmation_tvMessage" />

        <Button
            android:id="@+id/RegistryConfirmation_btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="@string/RegistryConfirmation_btnContinue" />
    </LinearLayout>

</FrameLayout>